<!DOCTYPE html>
<html lang="en">
<head>
    {{>head}}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/js/validator.min.js" type="text/javascript"></script>
    <script src="/js/profile.js" type="text/javascript"></script>
</head>
<body>

    <!-- HEADER MENU -->
    {{>navbarnone}}
    <!-- END HEADER MENU -->

	<!-- ABOUT US -->
	<section id="signup">
        <div class="signpic"></div>
        <div class="signtext">
            <h2 style="color:#dbdbdb; font-size: 24px;">Change is Inevitable</h2><br>
            <h4 style="color: #dbdbdb; font-size: 16px;">Edit your profile details here</h4>
            <form style="color: #dbdbdb; margin-top: 7vh;" id="sign" action="/editprofile" method="POST">
                <label>First Name*</label>
                <input type="text" name="firstname" id='fName' class="field" placeholder="First Name" value="{{firstName}}" required>
                <p id="fNameError" class="error">{{fNameError}}</p>

                <label>Last Name*</label>
                <input type="text" name="lastname" id='lName' class="field" placeholder="Last Name" value="{{lastName}}" required>
                <p id="lNameError" class="error">{{lNameError}}</p>

                <label>Email*</label>
                <input type="email" name="email" id='email' class="field" placeholder="*@dlsu.edu.ph" value="{{email}}" required>
                <p id="emailError" class="error">{{emailError}}</p>

                <label>Password* (4-32 characters)</label>
                <input type="password" name="password" id='pw' class="field" placeholder="Password" required>
                <p id="pwError" class="error">{{pwError}}</p>

                <label>Confirm Password* (4-32 characters)</label>
                <input type="password" name="cpassword" id='cpw' class="field" placeholder="Confirm Password" required>
                <p id="cpwError" class="error">{{cpwError}}</p>

                <input type="submit" id="submit" value="CONFIRM CHANGES" class="logbutton" disabled>
            </form>
        </div>
    </section>

</body>
</html>