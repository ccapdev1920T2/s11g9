<!DOCTYPE html>
<html lang="en">
<head>
    {{>head}}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/js/validator.min.js" type="text/javascript"></script>
    <script src="/js/functions.js" type="text/javascript"></script>
</head>
<body>

    <!-- HEADER MENU -->
    {{>navbarnone}}
    <!-- END HEADER MENU -->

	<!-- ABOUT US -->
	<section id="signup">
        <div class="signpic"></div>
        <div class="signtext">
            <h2 style="color:#dbdbdb; font-size: 24px;">Together with Unity and Collective Effort</h2><br>
            <h4 style="color: #dbdbdb; font-size: 16px;">Sign up to join our discussions!</h4>
            <form style="color: #dbdbdb; margin-top: 7vh;" id="sign" action="/signup" method="post">    
                <label>First Name*</label>
                <input type="text" name="firstname" id="fName" class="field" placeholder="First Name" required>
                <p id="fNameError" class="error">{{fNameError}}</p>

                <label>Last Name*</label>
                <input type="text" name="lastname" id="lName" class="field" placeholder="Last Name" required>
                <p id="lNameError" class="error">{{lNameError}}</p>

                <label>Email*</label>
                <input type="email" name="email" id="email" class="field" placeholder="*@dlsu.edu.ph" required>
                <p id="emailError" class="error">{{emailError}}</p>
                
                <label>Username* (4-32 characters)</label>
                <input type="text" name="username" id="username" class="field" placeholder="e.g. cutesicarlo" required>
                <p id="usernameError" class="error">{{usernameError}}</p>

                <label>Password* (4-32 characters)</label>
                <input type="password" name="password" id="pw" placeholder="Password" required>
                <p id="pwError" class="error">{{pwError}}</p>

                <input type="submit" id="submit" value="REGISTER" class="logbutton" disabled>
            </form>
        </div>
    </section>

</body>
</html>